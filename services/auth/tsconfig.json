{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",           // important for ESM
    "moduleResolution": "NodeNext", // fix TS5109
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
